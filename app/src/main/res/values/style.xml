<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SmallTextStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="inputTextEditStyle">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:background">@drawable/background_corners</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="inputTextEditStyleDayNight" parent="inputTextEditStyle">
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:drawableTint">@color/text_gray</item>
    </style>
</resources>